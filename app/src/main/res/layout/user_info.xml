<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/info_Toolbar"
        android:layout_width="match_parent"
        android:background="#669999"
        app:titleTextColor="?attr/titleColor"
        app:title="用户信息"
        android:layout_height="?attr/actionBarSize"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/AlertDialog.AppCompat.Light">
    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="用户信息"
        android:layout_below="@id/info_Toolbar"
        android:layout_centerHorizontal="true"
        android:textSize="16sp"
        android:textColor="#333333"
        android:layout_marginTop="30dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:background="@drawable/login_bg"
        android:layout_below="@id/info_Toolbar"
        android:layout_marginTop="62dp">

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_person_black_24dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            />

        <EditText
            android:id="@+id/et_info_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00000000"
            android:layout_marginStart="46dp"
            android:hint="用户名"
            android:textSize="13sp"
            android:textColorHint="#999"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:background="@drawable/login_bg"
        android:layout_below="@id/info_Toolbar"
        android:layout_marginTop="122dp">

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_lock_black_24dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            />
        <EditText
            android:id="@+id/et_info_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00000000"
            android:layout_marginStart="46dp"
            android:inputType="textPassword"
            android:hint="密码"
            android:textSize="13sp"
            android:textColorHint="#999"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:background="@drawable/login_bg"
        android:layout_below="@id/info_Toolbar"
        android:layout_marginTop="182dp">

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_lock_black_24dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            />
        <EditText
            android:id="@+id/et_info_password2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00000000"
            android:layout_marginStart="46dp"
            android:inputType="textPassword"
            android:hint="密码"
            android:textSize="13sp"
            android:textColorHint="#999"
            />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:background="@drawable/login_bg"
        android:layout_below="@id/info_Toolbar"
        android:layout_marginTop="242dp">

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_sex_black_24dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            />

        <RadioGroup
            android:id="@+id/info_radioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:contentDescription="性别"
            android:layout_marginStart="46dp"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/info_radioButton"
                android:text="男"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                />
            <RadioButton
                android:id="@+id/info_radioButton2"
                android:text="女"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </RadioGroup>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:background="@drawable/login_bg"
        android:layout_below="@id/info_Toolbar"
        android:layout_marginTop="302dp">

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_kecheng_black_24dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            />
        <EditText
            android:id="@+id/info_school"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00000000"
            android:layout_marginStart="46dp"
            android:hint="学校"
            android:textSize="13sp"
            android:textColorHint="#999"
            />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:background="@drawable/login_bg"
        android:layout_below="@id/info_Toolbar"
        android:layout_marginTop="362dp">

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_face_black_24dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            />
        <EditText
            android:id="@+id/info_flag"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00000000"
            android:layout_marginStart="46dp"
            android:hint="个性签名"
            android:textSize="13sp"
            android:textColorHint="#999"
            />
    </RelativeLayout>

    <Button
        android:id="@+id/info_change"
        android:layout_width="240dp"
        android:layout_height="42dp"
        android:layout_below="@id/info_Toolbar"
        android:layout_marginTop="442dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/register_button"
        android:text="修改资料"
        android:textSize="15sp"
        android:textColor="#FFFFFF"
        />
    <Button
        android:id="@+id/exit_login"
        android:layout_width="240dp"
        android:layout_height="42dp"
        android:layout_below="@id/info_change"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/login_button"
        android:text="退出登录"
        android:textSize="15sp"
        android:textColor="#FFFFFF"
        />
</RelativeLayout>