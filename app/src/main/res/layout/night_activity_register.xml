<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/near_black"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/register_Toolbar"
        android:layout_width="match_parent"
        android:background="#000000"
        app:titleTextColor="#ffffff"
        app:title="用户注册"
        android:layout_height="?attr/actionBarSize"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/AlertDialog.AppCompat.Light">
    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="欢迎注册"
        android:layout_below="@id/register_Toolbar"
        android:layout_centerHorizontal="true"
        android:textSize="16sp"
        android:textColor="#ffffff"
        android:layout_marginTop="30dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:background="@drawable/login_bg"
        android:layout_below="@id/register_Toolbar"
        android:layout_marginTop="62dp">

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_person_black_24dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            />

        <EditText
            android:id="@+id/et_register_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00000000"
            android:layout_marginStart="46dp"
            android:hint="请输入用户名"
            android:textSize="13sp"
            android:textColorHint="#999"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:background="@drawable/login_bg"
        android:layout_below="@id/register_Toolbar"
        android:layout_marginTop="122dp">

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_lock_black_24dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            />
        <EditText
            android:id="@+id/et_register_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00000000"
            android:layout_marginStart="46dp"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:textSize="13sp"
            android:textColorHint="#999"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:background="@drawable/login_bg"
        android:layout_below="@id/register_Toolbar"
        android:layout_marginTop="182dp">

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_lock_black_24dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            />
        <EditText
            android:id="@+id/et_register_password2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00000000"
            android:layout_marginStart="46dp"
            android:hint="请重复密码"
            android:inputType="textPassword"
            android:textSize="13sp"
            android:textColorHint="#999"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:background="@drawable/login_bg"
        android:layout_below="@id/register_Toolbar"
        android:layout_marginTop="242dp">

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_sex_black_24dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            />

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:contentDescription="性别"
            android:layout_marginStart="46dp"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioButton"
                android:text="男"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                />
            <RadioButton
                android:id="@+id/radioButton2"
                android:text="女"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </RadioGroup>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:background="@drawable/login_bg"
        android:layout_below="@id/register_Toolbar"
        android:layout_marginTop="302dp">

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_kecheng_black_24dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            />
        <EditText
            android:id="@+id/school"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00000000"
            android:layout_marginStart="46dp"
            android:hint="所在学校"
            android:textSize="13sp"
            android:textColorHint="#999"
            />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:background="@drawable/login_bg"
        android:layout_below="@id/register_Toolbar"
        android:layout_marginTop="362dp">

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_face_black_24dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            />
        <EditText
            android:id="@+id/flag"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00000000"
            android:layout_marginStart="46dp"
            android:hint="个性签名"
            android:textSize="13sp"
            android:textColorHint="#999"
            />
    </RelativeLayout>

    <Button
        android:id="@+id/resister"
        android:layout_width="240dp"
        android:layout_height="42dp"
        android:layout_below="@id/register_Toolbar"
        android:layout_marginTop="442dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/register_button"
        android:text="确认注册"
        android:textSize="15sp"
        android:textColor="#FFFFFF"
        />
</RelativeLayout>